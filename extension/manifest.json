{
  "name": "Koara",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Koara",
    "default_icon": "icons/icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://*/*.kd"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*.kd",
        "file://*/*.kd"
      ],
      "css": [
        "css/classic.css"
      ],
      "js": [
        "js/koara.min.js",
        "js/koara-html.min.js",
        "js/content.js"
      ]
    }
  ],
  "manifest_version": 2
}